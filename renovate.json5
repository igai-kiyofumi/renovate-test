{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["terraform"],
      "matchDepTypes": ["required_version"],
      "matchUpdateTypes": [
        "minor",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false
    },
    {
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": ["hashicorp/aws", "hashicorp/awscc"],
      "matchUpdateTypes": [
        "minor",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false
    },
    {
      "matchManagers": ["terragrunt"],
      "matchUpdateTypes": [
        "major",
        "minor",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false
    }
  ]
}