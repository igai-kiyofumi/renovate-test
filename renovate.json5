{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false
    },
    {
      "matchManagers": ["terraform"],
      "matchDepTypes": ["required_version"],
      "matchUpdateTypes": ["major", "patch"],
      "enabled": true
    },
    {
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": [
        "hashicorp/aws",
        "hashicorp/awscc"
      ],
      "matchUpdateTypes": ["major", "patch"],
      "enabled": true
    }
  ]
}